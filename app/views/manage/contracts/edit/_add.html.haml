%form#add.row{:autocomplete => :off}

  .col2of8
    .padding-right-xs
      %label.row.margin-bottom-xxs{:for => "add-start-date"}= _("Start date")
      .row
        %input.has-addon{:id => "add-start-date", :name => "start-date", :type => :text, :value => l(@start_date)}
        %label.addon{:for => "add-start-date"}
          %i.fa.fa-calendar

  .col2of8
    .padding-right-xs
      %label.row.margin-bottom-xxs{:for => "add-end-date"}= _("End date")
      .row
        %input.has-addone{:id => "add-end-date", :name => "end-date", :type => :text, :value => l(@end_date)}
        %label.addon{:for => "add-end-date"}
          %i.fa.fa-calendar

  .col4of8
    %label.row.margin-bottom-xxs{:for => "add-input"}= _("Add")
    .row
      #add-input
        %input.row.has-addone{:"data-add-contract-line" => true, :name => "input", :type => :text, :placeholder => "#{_("Inventory code, model name, search term")}", :"data-barcode-scanner-target" => true}
      %input{type: :hidden, data: {note: 'Only for stylingâ€¦'}}
      %button.addon{:type => :submit, :title => _("Add")}
        %i.fa.fa-plus
